upstream django {
    server unix:///home/thiago_gcosta13/blog/blog/mysite.sock; 
}
server {
    listen      80;
    server_name example.com;
    charset     utf-8;

    client_max_body_size 75M; 

    location /media  {
        alias /home/thiago_gcosta13/blog/blog/media; 
    }

    location /static {
        alias /home/thiago_gcosta13/blog/blog/static;
    }

    location / {
        uwsgi_pass  django;
        include     /home/thiago_gcosta13/blog/blog/uwsgi_params; 
    }
}

[uwsgi]
chdir           = /home/thiago_gcosta13/blog/blog/
module          = blog.wsgi
home            = /home/thiago_gcosta13/venv
master          = true
processes       = 10
socket          = /home/thiago_gcosta13/blog/blog/mysite.sock
vacuum          = true
chmod-socket    = 666

#-----------------------
[Service]
ExecStart=/home/thiago_gcosta13/venv/bin/uwsgi --emperor /etc/uwsgi/vassals --uid www-data --gid www-data
RuntimeDirectory=uwsgi
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all
User=thiago_gcosta13

[Install]
WantedBy=multi-user.target


